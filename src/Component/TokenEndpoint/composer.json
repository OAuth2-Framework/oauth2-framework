{
    "name": "oauth2-framework/token-endpoint",
    "type": "library",
    "description": "Token Endpoint for the OAuth2 Framework",
    "license": "MIT",
    "keywords": ["RFC6749", "oauth2", "framework", "token", "endpoint", "library"],
    "homepage": "https://oauth2-framework.spomky-labs.com/",
    "authors": [
        {
            "name": "Florent Morselli",
            "homepage": "https://github.com/Spomky"
        },
        {
            "name": "All contributors",
            "homepage": "https://github.com/OAuth2-Framework/oauth2-framework/contributors"
        }
    ],
    "require": {
        "php": "^7.1",
        "oauth2-framework/core": "^0.0@dev",
        "psr/http-message": "^1.0",
        "php-http/message-factory": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "suggest": {
        "oauth2-framework/openid-connect": "To add an authentication layer on top of the authorization server.",
        "oauth2-framework/client-rule": "To use of the client registration/configuration rules provided by this component."
    },
    "autoload": {
        "psr-4": {
            "OAuth2Framework\\Component\\TokenEndpoint\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
