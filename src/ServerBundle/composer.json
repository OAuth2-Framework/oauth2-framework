{
    "name": "oauth2-framework/authorization-server-bundle",
    "type": "symfony-bundle",
    "description": "Authorization Server Bundle for the OAuth2 Framework",
    "license": "MIT",
    "keywords": ["RFC6749", "oauth2", "framework", "authorization", "server", "bundle", "grant", "library"],
    "homepage": "https://oauth2-framework.spomky-labs.com/",
    "authors": [
        {
            "name": "Florent Morselli",
            "homepage": "https://github.com/Spomky"
        },
        {
            "name": "All contributors",
            "homepage": "https://github.com/OAuth2-Framework/oauth2-framework/contributors"
        }
    ],
    "require": {
        "php": "^7.1",
        "oauth2-framework/core": "^0.0@dev",
        "sensio/framework-extra-bundle": "^5.0",
        "symfony/config": "^3.4|^4.0",
        "symfony/dependency-injection": "^3.4|^4.0",
        "symfony/http-kernel": "^3.4|^4.0",
        "symfony/psr-http-message-bridge": "^1.0",
        "symfony/routing": "^3.4|^4.0",
        "zendframework/zend-diactoros": "^1.7"
    },
    "require-dev": {
        "guzzlehttp/psr7": "^1.4",
        "phpunit/phpunit": "^6.5",
        "symfony/browser-kit": "^3.4|^4.0",
        "symfony/framework-bundle": "^3.4|^4.0",
        "symfony/phpunit-bridge": "^3.4|^4.0",
        "symfony/yaml": "^3.4|^4.0"
    },
    "suggest": {
        "symfony/security-bundle": "Mandatory when resource owners can be end users."
    },
    "autoload": {
        "psr-4": {
            "OAuth2Framework\\ServerBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
